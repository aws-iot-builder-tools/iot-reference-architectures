<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.9.0//EN"
        "http://gwtproject.org/doctype/2.9.0/gwt-module.dtd">
<module rename-to="app">
    <inherits name="com.google.gwt.logging.Logging"/>
    <inherits name="com.google.gwt.user.User"/>
    <inherits name="Vavr"/>
    <inherits name="dagger.Dagger"/>
    <entry-point class="awslabs.client.application.shell.ShellPresenter"/>

    <!-- Specify the paths for translatable code                    -->
    <source path="client"/>
    <source path="shared"/>

    <!-- GWT Material -->
    <inherits name="gwt.material.design.GwtMaterialBasicWithJQuery"/>
    <inherits name="gwt.material.design.addins.GwtMaterialAddins"/>
    <inherits name="gwt.material.design.GwtMaterialTable"/>
    <inherits name="gwt.material.design.themes.ThemeBlue"/>

    <!-- Elemental 2 -->
    <inherits name="elemental2.core.Core"/>
    <inherits name="elemental2.dom.Dom"/>

    <!-- Elemento -->
    <inherits name="org.jboss.elemento.Core"/>

    <!-- JSON serialization -->
    <inherits name="com.github.nmorel.gwtjackson.GwtJackson"/>

    <!-- Base64 encoding -->
    <inherits name="com.google.common.io.Io"/>

    <set-configuration-property name="CssResource.enableGss" value="true"/>

    <!-- Comment it if you want permutations per property.
         It increases compilation time -->
    <collapse-all-properties value="true"/>
</module>
